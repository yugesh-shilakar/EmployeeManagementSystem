@model Employee

<h1>Create New Employee</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FirstName">First Name:</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name:</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Contact">Contact:</label>
        <input asp-for="Contact" class="form-control" />
        <span asp-validation-for="Contact" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address">Address:</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age">Age:</label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Salary">Salary:</label>
        <input asp-for="Salary" class="form-control" />
        <span asp
            -validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>District</label>
        <select id="districtDropdown" class="form-control" asp-for="District">
            <option value="">Select District</option>
            @foreach (var district in Model.DistrictList)
            {
                <option value="@district.Id">@district.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>City</label>
        <select id="cityDropdown" class="form-control" asp-for="City">
            <option value="">Select City</option>
            
        </select>
    </div>

    @*TEST*@



    <button type="submit" class="btn btn-primary ">Submit</button>
</form>

<a href="@Url.Action("Index")">Back to List</a>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/site.js"></script>
